<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.atguigu.dao.RoleDao">

<!--    PageInfo<Role> findPage(Map<String, Object> filters);-->
    <select id="findPage" resultType="Role">
        select *
        from acl_role
        <where>
            <if test="roleName != null and roleName != ''">
                and role_name = #{roleName}
            </if>
            and is_deleted = 0
        </where>
        order by id desc
    </select>


<!--    void delete(Long id);-->
    <update id="delete">
        update acl_role set update_time=now() ,is_deleted=1 where id=#{id}
    </update>

<!--    void update(Role role);-->
    <update id="update">
        update acl_role set
        <if test="roleName!=null and roleName!=''">
            role_name=#{roleName},
        </if>
        <if test="roleCode!=null and roleCode!=''">
            role_code=#{roleCode},
        </if>
        <if test="description!=null and description!=''">
            description=#{description},
        </if>
        update_time=now()
        where id=#{id}
    </update>








    <!--    Role getById(Long id);-->
    <select id="getById" resultType="role">
        select * from acl_role where id=#{id}
    </select>


<!--    void insert(Role role);
参数可以写，也可以不写
-->
    <insert id="insert">
        insert into acl_role(role_name,    role_code,    description) values (#{roleName},     #{roleCode},     #{description})
    </insert>


    <!--    List<Role> findAll();
    is_deleted : 表示是否删除 ，0 没有删除，1 删除
    删除：
    逻辑删除 ： 假的删除，只是修改数据
    物理删除 ： 真的删除
    -->
    <select id="findAll" resultType="role">
        select * from acl_role where is_deleted=0
    </select>

</mapper>